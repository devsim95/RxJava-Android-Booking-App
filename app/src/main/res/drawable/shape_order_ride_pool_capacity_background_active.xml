<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="45"
                android:endColor="#68be68"
                android:gradientRadius="360"
                android:startColor="#00abdd"
                android:type="linear" />
            <size android:height="60dp" android:width="60dp"/>
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval" >
            <solid android:color="@color/color_050d25" />
            <size android:height="57dp" android:width="57dp"/>
        </shape>
    </item>

</layer-list>