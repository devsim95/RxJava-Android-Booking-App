<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dip"
                android:color="@android:color/transparent"/>
            <size
                android:width="52dp"
                android:height="52dp"/>
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <stroke
                android:width="3dip"
                android:color="#555555"/>
            <size
                android:width="52dp"
                android:height="52dp"/>
        </shape>
    </item>

</layer-list>