<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/order_ride_commit_ride_type"
        style="@style/uber_app_button_style"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/inset_uber_white_logo"
        android:drawablePadding="@dimen/dip_minus30"
        android:text="@string/request_uber"
        android:visibility="visible" />

    <TextView
        android:id="@+id/order_ride_start_ride"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip56"
        android:layout_alignParentBottom="true"
        android:background="@color/color_123743"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/confirm_pickup"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp16"
        android:visibility="gone"/>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/order_ride_type_progress"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
        mpb_progressStyle="circular"
        android:layout_width="@dimen/dip70"
        android:layout_height="@dimen/dip70"
        android:layout_alignBottom="@id/order_ride_information_section"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dip111"
        android:indeterminate="true"
        android:visibility="visible"/>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progress"
        style="@style/general_material_progress_bar"
        android:layout_alignTop="@+id/order_ride_information_section"/>

</merge>
