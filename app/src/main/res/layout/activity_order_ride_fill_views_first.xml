<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/order_ride_pickup_estimate"
        android:layout_width="@dimen/dip96"
        android:layout_height="@dimen/dip48"
        android:layout_above="@+id/order_ride_information_section"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/dip15"
        android:layout_marginEnd="@dimen/dip16"
        android:background="@color/color_050d25"
        android:elevation="@dimen/dip8"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp12"
        android:visibility="gone"/>

    <View
        android:id="@+id/order_ride_information_section_align_for_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip270"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/order_ride_information_section"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip270"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/color_050d25" />

    <TextView
        android:id="@+id/order_ride_confirm_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/order_ride_information_section"
        android:layout_marginStart="@dimen/dip27"
        android:layout_marginTop="@dimen/dip24"
        android:fontFamily="sans-serif"
        android:text="@string/confirm_your_pickup_at"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp14"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/order_ride_confirm_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_ride_confirm_address_title"
        android:layout_marginStart="@dimen/dip27"
        android:layout_marginTop="@dimen/dip12"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp14"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/order_ride_powered_by_google"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip42"
        android:layout_below="@+id/order_ride_information_section"
        android:background="@color/color_212121"
        android:scaleType="center"
        android:src="@drawable/powered_by_google_dark"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_ride_address_prediction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_ride_powered_by_google"
        android:background="@color/color_212121"/>

    <LinearLayout
        android:id="@+id/order_ride_address_focus_thief"
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

</merge>
