<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_coach_mark_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/color_F2050D24">

    <ImageView
        android:id="@+id/close_coach_mark"
        android:layout_width="@dimen/dip24"
        android:layout_height="@dimen/dip24"
        android:background="@drawable/inset_white_cross"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/dip15"
        android:layout_marginStart="@dimen/dip18"/>

    <TextView
        android:id="@+id/tab_coach_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp18"
        android:textStyle="bold"
        android:paddingTop="@dimen/dip141"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:text="@string/unlock_uber"/>

    <TextView
        android:id="@+id/tab_coach_mark_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp16"
        android:fontFamily="@font/montserrat_light"
        android:textStyle="normal"
        android:layout_below="@id/tab_coach_unlock"
        android:gravity="center"
        android:layout_marginTop="@dimen/dip10"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="@string/tab_coach_mark_message"/>

</RelativeLayout>