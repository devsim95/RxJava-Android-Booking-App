<FrameLayout android:id="@+id/order_ride_type_details"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip420"
    android:background="@color/color_050d25"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/order_ride_type_detail_image"
            android:layout_width="@dimen/dip77"
            android:layout_height="@dimen/dip77"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip40"/>

        <TextView
            android:id="@+id/order_ride_type_detail_name"
            style="@style/wrap"
            android:layout_below="@+id/order_ride_type_detail_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip10"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp22"/>

        <TextView
            android:id="@+id/order_ride_type_detail_slogan"
            style="@style/wrap"
            android:layout_below="@+id/order_ride_type_detail_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dip1"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_fare_title"
            style="@style/wrap"
            android:layout_below="@+id/order_ride_type_detail_slogan"
            android:layout_marginStart="@dimen/dip26"
            android:layout_marginTop="@dimen/dip26"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/fare"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_fare"
            style="@style/wrap"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/order_ride_type_detail_fare_title"
            android:layout_marginEnd="@dimen/dip26"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_capacity_title"
            style="@style/wrap"
            android:layout_below="@+id/order_ride_type_detail_fare_title"
            android:layout_marginStart="@dimen/dip26"
            android:layout_marginTop="@dimen/dip15"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/capacity"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_capacity"
            style="@style/wrap"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/order_ride_type_detail_capacity_title"
            android:layout_marginEnd="@dimen/dip26"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_arrival_title"
            style="@style/wrap"
            android:layout_below="@+id/order_ride_type_detail_capacity_title"
            android:layout_marginStart="@dimen/dip26"
            android:layout_marginTop="@dimen/dip15"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/latest_arrival"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_arrival"
            style="@style/wrap"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/order_ride_type_detail_arrival_title"
            android:layout_marginEnd="@dimen/dip26"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/order_ride_type_detail_close"
            android:layout_width="@dimen/dip318"
            android:layout_height="@dimen/dip36"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dip15"
            android:background="@drawable/shape_rectangle_white_corner_4"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="@string/close"
            android:textColor="@color/color_0e162d"/>

    </RelativeLayout>

</FrameLayout>