<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bar_detail_feature_tabs_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dip16">

    <android.support.design.widget.TabLayout
        android:id="@+id/bar_details_tab_layout"
        style="@style/VenueDetailTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip48" />

    <android.support.v4.view.ViewPager
        android:id="@+id/bar_detail_lists_pager"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_below="@id/bar_details_tab_layout"/>

</RelativeLayout>